<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_m"
    android:layout_marginRight="@dimen/card_margin_m"
    android:layout_marginTop="@dimen/card_margin_s"
    android:layout_marginBottom="@dimen/card_margin_s">

    <com.huskyyy.anotheryouku.widget.VideoCardView
        android:id="@+id/cv_video0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/card_margin_s"
        android:layout_marginBottom="@dimen/card_margin_xs"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="@dimen/card_elevation_s"
        app:cardCornerRadius="@dimen/card_corner_radius_s">
    </com.huskyyy.anotheryouku.widget.VideoCardView>

    <com.huskyyy.anotheryouku.widget.VideoCardView
        android:id="@+id/cv_video1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/card_margin_s"
        android:layout_marginBottom="@dimen/card_margin_xs"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="@dimen/card_elevation_s"
        app:cardCornerRadius="@dimen/card_corner_radius_s">
    </com.huskyyy.anotheryouku.widget.VideoCardView>

</LinearLayout>