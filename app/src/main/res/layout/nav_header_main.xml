<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/image_width_xl"
        android:layout_height="@dimen/image_height_xl"
        android:layout_marginLeft="@dimen/image_margin_xl"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_circle_black_24dp"/>

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="@dimen/text_margin_xl"
        android:layout_marginTop="@dimen/text_margin_xxxl"
        android:lines="2"
        style="@style/PrimaryTextStyle.xLarge.Light"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="@dimen/text_margin_xl"
        android:layout_marginBottom="@dimen/text_margin_xxxl"
        android:layout_alignParentBottom="true"
        style="@style/PrimaryTextStyle.Large.Light" />

</RelativeLayout>
