<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_footer_height"
    android:layout_marginLeft="@dimen/card_margin_m"
    android:layout_marginRight="@dimen/card_margin_m"
    android:layout_marginTop="@dimen/card_margin_s"
    android:layout_marginBottom="@dimen/card_margin_m"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/text_padding_xl"
        android:text="@string/card_refresh"
        android:gravity="center"
        style="@style/PrimaryTextStyle.Small"/>

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="@dimen/view_footer_height"
        android:layout_height="@dimen/view_footer_height"
        android:padding="@dimen/image_padding_m"
        android:src="@drawable/ic_refresh_18dp" />

</LinearLayout>